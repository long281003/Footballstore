<body>
    <div class="container">
        <div class="container">
            <div class="mt-5 row">
                <div class="col-7  image-left">

                </div>
                <div class="col-5 ">

                    <form action="/Create-user" method="POST">
                        <div class="mb-3">
                            <label for="fullName">username</label>
                            <input type="text" class="form-control" name="username" placeholder="fullName">
                        </div>
                        <div class="mb-3">
                            <label for="email">Email address: (*)</label>
                            <input type="email" class="form-control" name="email" placeholder="emai@gmail.com">
                        </div>
                        <div class="mb-3">
                            <label for="password">Confirm Password: (*)</label>
                            <input type="password" class="form-control" name="password" placeholder="password">
                        </div>
                        <div class="mb-3">
                            <label for="ConfirmationPassword">Password</label>
                            <input type="password" class="form-control" name="ConfirmationPassword"
                                placeholder="ConfirmationPassword">
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                    <hr>
                    <div>
                        <div>If already have had an account. <a href="/login">Log in.</a>
                            <div>
                                Return to <a href="/">HomePage</a>
                            </div>
